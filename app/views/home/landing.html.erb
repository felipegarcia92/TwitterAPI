<% if @current_user.present? %>
  <div><%= @current_user.first_name + ' ' + @current_user.last_name %></div>
<% end %>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= link_to 'Sign Up', new_user_path %>
<%= link_to 'Sign In', login_path %>

